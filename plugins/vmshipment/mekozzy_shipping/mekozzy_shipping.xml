    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_vmshipment_mekozzy_shipping.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_vmshipment_mekozzy_shipping.sys.ini</language>
        <language tag="vi-VN">vi-VN/vi-VN.plg_vmshipment_mekozzy_shipping.ini</language>
