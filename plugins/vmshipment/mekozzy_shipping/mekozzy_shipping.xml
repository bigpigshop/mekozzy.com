    </languages>
    <config>
        <fields name="params">
            <fieldset name="account" label="PLG_VMSHIPMENT_SHIPPING_ACCOUNT">
                <field
                        name="authorization"
                        type="text"
                        default=""
                        label="PLG_VMSHIPMENT_SHIPPING_AUTHORIZATION"
                />
                <field
                        name="productionurl"
                        type="text"
                        default=""
                        label="PLG_VMSHIPMENT_SHIPPING_PRODUCTIONURL"
                />
            </fieldset>
        </fields>
    </config>
    <vmconfig>
        <fields name="params">
            <fieldset name="restrictions">
                <field name="authorization" type="text" size="10" default=""
                       label="VMSHIPMENT_WEIGHT_COUNTRIES_NBPRODUCTS_START"
                       description="VMSHIPMENT_WEIGHT_COUNTRIES_NBPRODUCTS_START_DESC"/>
                <field name="productionurl" type="text" size="10" default=""
                       label="VMSHIPMENT_WEIGHT_COUNTRIES_NBPRODUCTS_STOP"
                       description="VMSHIPMENT_WEIGHT_COUNTRIES_NBPRODUCTS_STOP_DESC"/>
